            grid-template-columns: repeat(2, 1fr);
            gap: 2rem;
        }
        
        .stat-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem;
            border-radius: 20px;
            text-align: center;
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
        }
        
        .stat-number {
            font-size: 2.5rem;
            font-weight: 700;
            display: block;
            margin-bottom: 0.5rem;
        }
        
        .stat-label {
            font-size: 1rem;
            opacity: 0.9;
        }
        
        .rating-section {
            padding: 5rem 2rem;
            background: #f8f9fa;
            text-align: center;
        }
        
        .rating-container {
            max-width: 600px;
            margin: 0 auto;
            background: white;
            padding: 3rem;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }
        
        .star-rating {
            display: flex;
            justify-content: center;
            gap: 0.5rem;
            margin-bottom: 1.5rem;
        }
        
        .star {
            font-size: 2rem;
            color: #ddd;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .star:hover, .star.active {
            color: #ffc107;
            transform: scale(1.2);
        }
        
        .rating-text {
            font-size: 1.1rem;
            color: #666;
            margin-bottom: 2rem;
        }
        
        .feedback-buttons {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
            gap: 1rem;
        }
        
        .feedback-btn {
            padding: 1rem;
            border: 2px solid #e9ecef;
            background: white;
            border-radius: 15px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-weight: 500;
        }
        
        .feedback-btn:hover {
            border-color: #667eea;
            background: #f8f9ff;
        }
        
        .feedback-btn.selected {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-color: #667eea;
        }
        
        .footer {
            background: #333;
            color: white;
            text-align: center;
            padding: 2rem;
        }
        
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        @media (max-width: 768px) {
            .header {
                padding: 1rem;
            }
            
            .menu {
                display: none;
            }
            
            .mission-content {
                grid-template-columns: 1fr;
                gap: 2rem;
            }
            
            .mission-stats {
                grid-template-columns: 1fr;
            }
            
            .feedback-buttons {
                grid-template-columns: repeat(2, 1fr);
            }
        }
    </style>
</head>
